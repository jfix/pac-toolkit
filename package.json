{
  "name": "pac-toolkit",
  "productName": "PAC Toolkit",
  "author": "jfix",
  "license": "CC0-1.0",
  "version": "1.2.11",
  "description": "A program that provides tools",
  "main": "main.js",
  "scripts": {
    "sass": "node-sass assets/sass/materialize.scss assets/css/materialize.css",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "build --mac --win",
    "ship": "build --mac --win -p always"
  },
  "repository": "https://github.com/jfix/pac-toolkit",
  "keywords": [
    "electron"
  ],
  "devDependencies": {
    "electron": ">=13.6.6",
    "electron-builder": "19.56.2",
    "electron-winstaller": "2.7.0"
  },
  "dependencies": {
    "7zip-bin": "^3.1.0",
    "deep-extend": "0.6.0",
    "dotenv": "^4.0.0",
    "electron-debug": "^1.5.0",
    "electron-is": "^2.4.0",
    "electron-log": "^2.2.14",
    "electron-store": "^1.3.0",
    "electron-updater": "^2.21.4",
    "hammerjs": "^2.0.8",
    "hoek": "^5.0.3",
    "jquery": "3.4.1",
    "load-json-file": "^2.0.0",
    "material-design-icons-iconfont": "^3.0.3",
    "semver-compare": "^1.0.0",
    "xml2js": "^0.4.19"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "jfix",
        "repo": "pac-toolkit"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ]
    },
    "mac": {
      "target": [
        "zip",
        "dmg"
      ],
      "category": "public.app-category.developer-tools"
    },
    "appId": "oecd.pac.redmine-dossier",
    "files": [
      "**/*",
      "!sample.env"
    ]
  },
  "standard": {
    "globals": [
      "$"
    ]
  }
}
